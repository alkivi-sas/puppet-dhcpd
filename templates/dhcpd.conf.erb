# DNS Stuff
option domain-name <%= @domain_name %>;
option domain-name-servers <%= @dns_servers.join(', ') %>;

# Default options
option routers <%= @routers.join(', ') %>;
default-lease-time 3600;
max-lease-time 72000;
log-facility local7;
authoritative;

# PXE stuff
# TODO parametrize this ?
<% if @bootp %>allow bootp;<% else %>#allow bootp;<% end %>
<% if @booting %>allow booting;<% else %>#allow booting;<% end %>
<% if @filename %>filename "<%= @filename %>";<% end %>
<% if @next_server %>next-server <%= @next_server %>;<% end %>

subnet <%= @network %> netmask <%= @netmask %> {
	range <%= @range_start %> <%= @range_end %>;
	option broadcast-address <%= @broadcast %>;
}
